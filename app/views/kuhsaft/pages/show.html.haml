= content_for :head do
  %title= @page.title.present? ? @page.title : @page.navigation_name

- if @page.bricks.map(&:type).include? "Kuhsaft::PlaceholderBrick"
  - unless @page.blank?
    .page-content
      - @page.bricks.localized.each do |brick|
        = render brick

- else
  - cache [@page, I18n.locale] do
    - unless @page.blank?
      .page-content
        - @page.bricks.localized.each do |brick|
          = render brick
